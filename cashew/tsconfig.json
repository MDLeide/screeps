{
    "compileOnSave": false,
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "dist",
        "baseUrl": "src/",
        "sourceMap": true,
        "experimentalDecorators": true,
        "noImplicitReturns": true,
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": false,
        "noImplicitUseStrict": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}
